<div class="container" id="contact">
  <div class="card">
    <%= cl_image_tag 'san_fran', class: 'contact-picture img-fluid'%>
    <%# <%= image_tag  'letter', class: 'overlay-img img-fluid'%>
      <%= simple_form_for :contact, url: contacts_path do |f| %>
        <h4 class="card-title h5 h4-sm">Contact Form</h4>
            <%= f.input :name, required: true, placeholder: 'Name' %>

            <%= f.input :email, required: true, placeholder: 'Email', input_html: { autocomplete: 'email' } %>

            <%= f.input :message, as: :text, required: true, placeholder: "Send me a message"%>

            <div class= "d-none">
              <%= f.label :nickname %>
              <%= f.text_field :nickname, :hint => 'Leave this field blank!' %>
            </div>

            <%= f.submit 'Send Message', class: 'my-btn' %>
        <% end %>
    </div>
  </div>
</div>
