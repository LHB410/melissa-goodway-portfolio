<div class="container py-3">
  <div class="row">
    <div class="col-sm-12 col-md-6">
      <% if @art.photo.attached?%>
        <%= cl_image_tag @art.photo.key, class: "img"%>
      <%end %>
    </div>
    <div class="col-sm-12 col-md-6">
      <h1><%= @art.title %></h1>
      <p><%= @art.description %></p>
      <p>Amount: <%= humanized_money_with_symbol(@art.price) %></p>
    </div>
    <%= form_with url: orders_path do %>
      <%= hidden_field_tag 'art_id', @art.id %>
      <%= submit_tag 'Purchase', class: 'btn btn-primary' %>
    <% end %>
  </div>
</div>
