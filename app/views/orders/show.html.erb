<div class="container">
  <div class="row py-4">
    <div class="col-md-3"><%= cl_image_tag @order.art.photo.key, width: '100%' %></div>
    <div class="col">
      <h1>Order #<%= @order.id %> <small><span class="badge badge-primary"><%= @order.state %></span></small></h1>
      <ul class="list-unstyled">
        <li><strong>ISSUED ON</strong> <%= @order.created_at.to_date %></li>
        <li><strong>ART PRODUCT</strong> <%= @order.art.title %> [<%= @order.art.id %>]</li>
        <li><strong>TOTAL</strong> <%= humanized_money_with_symbol @order.art.price %></li>
        </li>
      </ul>
      <p>Estimated delivery in <strong>2 business days</strong></p>
      <%= link_to 'back', home_path  %>
    </div>
  </div>
</div>

<div class="card-product">
  <%= cl_image_tag @order.art.photo.key, width: '100%' %>
  <div class="card-product-infos">
    <h1>Order #<%= @order.id %> <small><span class="badge badge-primary"><%= @order.state %></span></small></h1>
      <ul class="list-unstyled">
        <li><strong>ISSUED ON</strong> <%= @order.created_at.to_date %></li>
        <li><strong>ART PRODUCT</strong> <%= @order.art.title %> [<%= @order.art.id %>]</li>
        <li><strong>TOTAL</strong> <%= humanized_money_with_symbol @order.art.price %></li>
        </li>
      </ul>
      <p>Estimated delivery in <strong>2 business days</strong></p>
      <%= link_to 'back', home_path, class: 'my-btn'  %>
  </div>
</div>
